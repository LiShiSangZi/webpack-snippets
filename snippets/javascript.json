{
	"Webpack start": {
    "prefix": "wpstart",
    "description": "Webpack Snippet Start",
    "body": [
      "'use strict';",
      "",
      "const path = require('path');",
      "",
      "module.exports = {",
      "\tentry: '${entry}',",
      "\tcontext: '${context}',",
      "\toutput: {",
      "\t\tpath: path.resolve(__dirname, '${outputPath}'),",
      "\t\tfilename: '${filename}',",
      "\t\tpublicPath: '${path}'",
      "\t},",
      "\tmodule: {",
      "\t\trules: [",
      "\t\t]",
      "\t},",
      "\tresolve: {",
      "\t},",
      "\tdevtool: 'source-map',",
      "\tplugins: [",
      "\t]",
      "};",
			""
    ]
  },
  "Webpack Module Add Rule": {
    "prefix": "wprule",
    "description": "Add a new rule in rules Array",
    "body": [
      "{",
      "\ttest: /${reg}/,",
      "\tloader: '${loader}',",
      "}"
    ]
  },
	"Require Webpack": {
		"prefix": "wprequire",
		"description": "Require Webpack.",
		"body": [
			"const webpack = require('webpack');"
		]
	},
	"Add Chunk Plugin": {
		"prefix": "wpochunk",
		"description": "Add webpack.optimize.CommonsChunkPlugin",
		"body": [
			"new webpack.optimize.CommonsChunkPlugin({",
    	"\tname: '${name}',",
    	"\tfilename: '${file}.min.js',",
  		"})"
		]
	},
	"Add UglifyJS Plugin": {
		"prefix": "wpougf",
		"description": "Add webpack.optimize.UglifyJsPlugin",
		"body": [
			"new webpack.optimize.UglifyJsPlugin({",
    	"\tcompress: {",
      "\t\twarnings: false,",
      "\t\tdrop_console: false",
    	"\t}",
  		"})"
		]
	},
	"Add Define Plugin": {
		"prefix": "wpodef",
		"description": "Add webpack.DefinePlugin",
		"body": [
			"new webpack.DefinePlugin({",
    	"\t'process.env.NODE_ENV': '\"${production}\"',",
  		"})"
		]
	},
	"Require Extract Text Plugin": {
		"prefix": "wprex",
		"description": "Require Extract Text Plugin",
		"body": [
			"const ExtractTextPlugin = require('extract-text-webpack-plugin');"
		]
	},
	"Add Extract Text Plugin": {
		"prefix": "wpoex",
		"description": "Add ExtractTextPlugin",
		"body": [
			"new ExtractTextPlugin({",
    	"\tfilename: '${fileName}',",
    	"\tallChunks: true,",
  		"})"
		]
	}
}